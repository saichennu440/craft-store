{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    // 1) Serve real static files directly (any path containing a dot / extension)
    { "src": "/(.*\\..+)$", "dest": "/$1" },

    // 2) Optional: allow /api or other serverless endpoints to pass (uncomment/adjust if used)
    // { "src": "/api/(.*)", "dest": "/api/$1" },

    // 3) SPA fallback â€” everything else -> index.html
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
